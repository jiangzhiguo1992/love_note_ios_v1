# 官方地址（默认）
source 'https://github.com/CocoaPods/Specs.git'
# 阿里云仓库
source 'https://github.com/aliyun/aliyun-specs.git'

# 说明平台是ios，版本是10.0
platform :ios, '10.0'

# ????
use_frameworks!

# 忽略引入库的所有警告（强迫症者的福音啊）
inhibit_all_warnings!

# 针对lovenote target
target 'lovenote' do
    pod 'Moya', '~> 12.0.1' # 网络框架、AFNetworking(oc)
    pod 'ObjectMapper', '~> 3.4.2' # json解析、MJExtension(oc)
    pod 'Kingfisher', '~> 5.1.0' # 图片框架、SDWebImage(oc)
    
    pod 'MJRefresh', '~> 3.1.15.7'
    pod 'DZNEmptyDataSet', '~> 1.8.1'
    pod 'MWPhotoBrowser', '~> 2.1.2'
    pod 'LGAlertView', '~> 2.4.0'
    pod 'TZImagePickerController', '~> 3.1.9'
    pod 'PhotoTweaks', '~> 1.0.3'
    pod 'XLPagerTabStrip', '~> 8.1.1'
    pod 'SDCycleScrollView', '~> 1.65'
    pod 'KTVHTTPCache', '~> 2.0.0'
    pod 'FSCalendar', '~> 2.8.0'
    
    pod 'SwiftyStoreKit', '~> 0.14.2' # ApplePay
    pod 'AliyunOSSiOS', '~> 2.10.7' # AliOss
    pod 'AlicloudPush', '~> 1.9.8' # AliPush
    pod 'AMapFoundation-NO-IDFA', '~> 1.5.6' # 地图定位
    pod 'AMapLocation-NO-IDFA', '~> 2.6.1' # 地图定位
    pod 'AMap2DMap-NO-IDFA', '~> 5.6.1' # 地图2D
    pod 'AMapSearch-NO-IDFA', '~> 6.6.0' # 地图搜索
end
